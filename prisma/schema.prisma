generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int         @id @default(autoincrement()) // Auto-incremented ID
  name       String // A name (string)
  email      String      @unique // A unique email address
  timesheets Timesheet[] // Reverse relation: One user has many timesheets
}

model Timesheet {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  date      DateTime
  type      String?
  project   String?
  phase     String?
  startTime String
  endTime   String
  hours     Float
  notes     String?

  // Reference to User
  userId Int // Foreign Key to the User
  user   User @relation(fields: [userId], references: [id])
}
